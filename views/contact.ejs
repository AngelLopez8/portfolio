<%- include('partials/header.ejs') %>

<main class="contact">
    <h2 class="center-elements">Contact</h2>
    <% if (result) { %>
        <% if (result === 'true') { %>
            <h3 class="center-elements" style="color: green;">Successful!</h3>
        <% } else { %>
            <h3 class="center-elements" style="color: red;">Failed, try again.</h3>
        <% } %>
    <% } %>
    <form action="/contact" id="contact" method="POST" class="contact-form">
        <div class="contact-name center-elements">
            <label class="contact-label" for="fname">Full Name</label>
            <input class="contact-input" type="text" id="fname" name="fname" placeholder="Full Name">
        </div>
        
        <div class="contact-email center-elements">
            <label class="contact-label" for="email">Email</label>
            <input class="contact-input" type="email" id="email" name="email" placeholder="example@mail.com">
        </div>

        <div class="contact-msg center-elements">
            <label class="contact-label" for="message">Message</label>
            <br>
            <textarea class="contact-textarea" id="message" name="message" placeholder="Enter Message"></textarea>
        </div>
        <div class="contact-submit center-elements">
            <button class="contact-btn" type="submit">Send</button>
        </div>
    </form>
</main>

<%- include('partials/footer.ejs') %>